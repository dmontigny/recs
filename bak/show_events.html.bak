	$fullname = $rs->namelast . ', ' . $rs->namefirst;
     echo "<option ";
     if($_POST['peepsel']==$rs->idpeep) echo 'selected ';
     echo "value='{$rs->idpeep}'>$fullname</option>\n";
}
?>
</select>
<input type="submit" name="submit" value="Select">
